{
    "name": "GitHub Open Roslyn.io",
    "version": "0.1",
    "manifest_version": 2,

    "description": "Chrome extension to navigate to source.roslyn.io from github Roslyn source",
    "homepage_url":  "https://github.com/jcouv/github-open-roslynio",
    "author": "Julien Couvreur",

    "background": {
        "scripts": [ "src/roslyn-symbols.js" ],
        "persistent": false
    },
    "permissions": [ "contextMenus" ],

    "icons": {
        "16": "Assets/icon16.png",
        "48": "Assets/icon48.png",
        "128": "Assets/icon128.png"
    },
    "minimum_chrome_version": "20"
}
